<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/IB1"
        android:src="@drawable/f1logo"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginTop="440px"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
    />
    <TextView
        android:id="@+id/TV1"
        android:layout_below="@id/IB1"
        android:layout_marginTop="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang! \nSilahkan isikan namamu!"
        android:textSize="80px"
        android:textColor="#ee0000"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
    />
    <EditText
        android:id="@+id/ET1"
        android:layout_below="@id/TV1"
        android:layout_marginTop="80px"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:hint="Isi namamu"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/B1"
        android:layout_below="@id/ET1"
        android:layout_marginTop="20px"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_below="@id/B1"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="*klik pada logo untuk menuju ke website resmi F1"
        android:textAlignment="center"
        android:textColor="#ee0000"
        android:textSize="30px"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>